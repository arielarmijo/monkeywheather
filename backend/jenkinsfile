pipeline {
	agent any
	stages {
		stage('build') {
			steps {
				sh 'ls -l'
				sh 'mvn --version'
				sh 'mvn -f backend/monkeyweather-userapi/pom.xml clean package'
			}
		}
		stage('deploy') {
			steps {
				sh 'cp backend/monkeyweather-userapi/target/*.war /opt/tomcat/latest/webapps/'
			}
		}
	}
}
