pipeline {
	agent any
	environment {
		WEB_FOLDER = '/opt/tomcat/latest/webapps/monkeyweather/static'
	}
	stages {
		stage('build') {
			steps {
				sh 'ls -l'
			}
		}
		stage('clean') {
			when { expression {  fileExists (WEB_FOLDER) } }
			steps {
				sh 'rm -rfv $WEB_FOLDER/*'
			}
		}
		stage('deploy') {
			steps {
				sh 'cp -prv monkeyweather/* $WEB_FOLDER'
			}
		}
	}
}
